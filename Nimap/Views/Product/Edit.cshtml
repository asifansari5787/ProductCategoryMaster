@model Product

<div class="container mt-4">
    <h2>Edit Product</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal border p-4 rounded shadow-sm bg-light">
            <hr />
            @Html.HiddenFor(model => model.ProductId)

            <div class="form-group row">
                @Html.LabelFor(model => model.ProductName, new { @class = "col-md-2 col-form-label font-weight-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Product Name" } })
                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.CategoryId, "Category", new { @class = "col-md-2 col-form-label font-weight-bold" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mt-3">
                <div class="col-md-10 offset-md-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2", @style = "margin-left: 10px;" })
                </div>
            </div>
        </div>
    }
</div>
