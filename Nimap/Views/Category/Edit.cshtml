@model Nimap.Models.Category

<div class="container mt-4">
    <h2>Edit Category</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal border p-4 rounded shadow-sm bg-light">
            <hr />
            @Html.HiddenFor(model => model.CategoryId)

            <div class="form-group row">
                @Html.LabelFor(model => model.CategoryName, new { @class = "col-md-2 col-form-label font-weight-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mt-3">
                <div class="col-md-10 offset-md-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2", @style = "margin-left: 10px;" })
                </div>
            </div>
        </div>
    }
</div>
